<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Стили для AMOLED карточек -->
    <style name="Widget.App.CardView.Amoled" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/amoled_surface</item>
        <item name="strokeColor">@color/amoled_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- Специальный стиль для AMOLED Toolbar -->
    <style name="Widget.App.Toolbar.Amoled" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/amoled_background</item>
        <item name="titleTextColor">@color/amoled_on_background</item>
        <item name="subtitleTextColor">@color/amoled_on_background</item>
        <item name="android:theme">@style/ThemeOverlay.App.Toolbar.Amoled</item>
    </style>
    
    <!-- Тема для элементов внутри AMOLED Toolbar -->
    <style name="ThemeOverlay.App.Toolbar.Amoled" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorOnSurface">@color/amoled_on_background</item>
        <item name="colorOnSurfaceVariant">@color/amoled_on_surface_variant</item>
        <item name="android:textColorPrimary">@color/amoled_on_background</item>
        <item name="android:textColorSecondary">@color/amoled_on_surface_variant</item>
    </style>
    
    <!-- Обычная темная тема -->
    <style name="Theme.App2Proxy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="colorOnBackground">@color/md_theme_dark_onBackground</item>
        <item name="colorSurface">@color/md_theme_dark_surface</item>
        <item name="colorOnSurface">@color/md_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        
        <!-- Прозрачная строка состояния для темной темы -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        
        <!-- Цвет верхней панели для темной темы -->
        <item name="colorSurfaceContainer">#2A2A2A</item>
        
        <!-- Улучшенные Material 3 стили -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <!-- AMOLED тема с чисто черным AppBar -->
    <style name="Theme.App2Proxy.Amoled" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Динамические цвета Material You будут применены автоматически, кроме фона -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/amoled_surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/amoled_surface_variant</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/amoled_error_container</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        
        <!-- КРИТИЧНО: Чисто черный фон для AMOLED -->
        <item name="android:colorBackground">@color/amoled_background</item>
        <item name="colorOnBackground">@color/amoled_on_background</item>
        <item name="colorSurface">@color/amoled_surface</item>
        <item name="colorOnSurface">@color/amoled_on_surface</item>
        <item name="colorSurfaceVariant">@color/amoled_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/amoled_on_surface_variant</item>
        <item name="colorOutline">@color/amoled_outline</item>
        <item name="colorSurfaceInverse">@color/md_theme_dark_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_dark_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_dark_inversePrimary</item>
        
        <!-- Прозрачная строка состояния -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@android:color/transparent</item>
        
        <!-- ВАЖНО: Черный цвет для всех поверхностей включая AppBar -->
        <item name="colorSurfaceContainer">@color/amoled_background</item>
        <item name="colorSurfaceContainerHigh">@color/amoled_background</item>
        <item name="colorSurfaceContainerHighest">@color/amoled_background</item>
        <item name="colorSurfaceContainerLow">@color/amoled_background</item>
        <item name="colorSurfaceContainerLowest">@color/amoled_background</item>
        
        <!-- Специальный стиль для AMOLED Toolbar -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Amoled</item>
        
        <!-- Улучшенные Material 3 стили -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <!-- Внутри Theme.App2Proxy.Amoled -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Amoled</item>
    </style>
</resources>
