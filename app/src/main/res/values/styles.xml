<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
    </style>
    <!-- Базовые темы остаются без изменений -->
    
    <!-- Material 3 стили для переключателей -->
    <style name="ThemeOverlay.Material3.Switch" parent="ThemeOverlay.Material3">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorSurfaceVariant">?attr/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- Стили для Material 3 карточек -->
    <style name="Widget.Material3.CardView.Elevated.Settings" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <!-- Стили для Material 3 полей ввода -->
    <style name="Widget.Material3.TextInputLayout.OutlinedBox.Dense.Settings" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.TextInputLayout.Rounded</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Material3.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>
